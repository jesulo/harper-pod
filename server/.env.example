# Harper Configuration Template
# Copy this file to .env and configure your settings

# STT/TTS Model Selection
STT_MODEL=whisper-local  # Options: whisper-local, groq
TTS_MODEL=chatterbox     # Options: chatterbox, resemble, together

# STT Configuration
STT__GROQ_API_KEY=your_groq_api_key_here
STT__DEVICE=cuda  # Options: cuda, cpu, mps

# TTS Configuration

# Resemble AI Streaming (Chatterbox model - cloud)
# Get API key from: https://app.resemble.ai/account/api
# List voices: curl -H "Authorization: Bearer <KEY>" https://api.resemble.ai/v1/voices
TTS__RESEMBLE_API_KEY=your_resemble_api_key_here
TTS__RESEMBLE_VOICE_UUID=your_voice_uuid_here
TTS__RESEMBLE_PROJECT_UUID=  # Optional
TTS__RESEMBLE_PRECISION=PCM_16  # Options: MULAW, PCM_16, PCM_24, PCM_32
TTS__RESEMBLE_USE_HD=false  # High-definition mode (increases latency)

# Together AI TTS
TTS__TOGETHER_API_KEY=your_together_ai_api_key_here  
TTS__VOICE=tara
TTS__SAMPLE_RATE=24000

# LLM Configuration
LLM__MODEL=api  # Options: api, local
LLM__OPENAI_API_KEY=your_openai_api_key_here
LLM__MODEL_NAME=gpt-4o-mini

# Server Configuration
SERVER__HOST=0.0.0.0
SERVER__PORT=5000
SERVER__DEBUG=false

# Global Settings
LANGUAGE=en
INPUT_SAMPLE_RATE=24000